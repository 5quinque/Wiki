<div class="container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ panel_title }}</h3>
            </div>
            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    Are you sure you want to delete '{{ form.title.vars.value }}'?
                </div>
                <div class="form-group">
                    {{ form_widget(form.delete) }}
                    <a href="{{ app.request.headers.get('referer') }}" class="btn btn-info">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
