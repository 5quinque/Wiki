<div class="container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ panel_title }}</h3>
            </div>
            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.title, 'Title') }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Post Title'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.slug, 'Slug') }}
                    {{ form_widget(form.slug, {'attr': {'class': 'form-control', 'placeholder': 'Post Slug'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.delete, {'label': 'Delete',
                        'attr': {'class': 'btn btn-danger'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>